{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "plugins": ["@nestjs/swagger"],
    "assets": [
      {
        "include": "service-account.json",
        "watchAssets": true
      },
      {
        "include": "i18n/**/*",
        "watchAssets": true,
        "outDir": "dist"
      },
      {
        "include": "shared/send-email/templates/**/*",
        "watchAssets": true,
        "outDir": "dist"
      }
    ]
  }
}
